<%- partial('post/title') %>

<div class="container content">

  <h3>Have questions, Get in touch with us</h3>

  <form id="form" method="POST" action="">
    <div><input type="text" tabindex=1 name="name" placeholder="Name" required /></div>
    <div><input type="text" tabindex=2 name="email" placeholder="Email" required /></div>
    <div><textarea name="message" tabindex=3 rows="7" placeholder="Your Message" required></textarea></div>
    <div><button type="submit" tabindex=4 class="g-recaptcha" data-sitekey="6Lf6GAEVAAAAAG3sSXioLmmvnh2wK09Cr1BosgAo" data-callback='onSubmit' data-action='submit'>Submit</button></div>
  </form>
<style>
#form{margin:0 auto;padding:0;max-width:650px}
#form input, #form textarea{width:100%;border:0;border-bottom:2px solid grey;padding:5px 0;font:normal 18px 'Ubuntu', arial;margin:15px 0;outline:none;color:#24292e}
#form input:focus, #form textarea:focus{border-bottom-color:#24292e}
#form button{outline:none;cursor:pointer;border-radius:99px;background:#004b59;color:#fff;font:22px 'Ubuntu', arial;padding:10px 30px;display:inline-block;border:none;margin:15px 0}
#form button:hover, #form button:focus{box-shadow:0 0 15px #24292e}
#form button:active{box-shadow:none;margin:16px 0 14px 0}
#form input, #form textarea, #form button{transition:all 0.3s cubic-bezier(0.215, 0.61, 0.355, 1)}
</style>
  
<script async src="https://www.google.com/recaptcha/api.js"></script>
<script>function onSubmit(token){document.getElementById("form").submit()}</script>

  <br>
  <%- post.content %>

  <br>
  <h4>Or follow us on social medias</h4>
  <%- partial('_widget/social_media') %>

  <div class="cb"></div>
</div>

